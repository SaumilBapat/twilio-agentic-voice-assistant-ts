{
  "compilerOptions": {
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "module": "CommonJS" // Updated from CommonJS
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "agents/**/*",
    "app.ts",
    "completion-server/**/*",
    "integration-server/**/*",
    "lib/**/*",
    "scripts/**/*.ts",
    "shared/**/*"
  ]
}
