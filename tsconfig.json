{
  "compilerOptions": {
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "module": "CommonJS",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "app.ts",
    "agents/**/*",
    "lib/**/*",
    "services/**/*",
    "shared/**/*",
    "scripts/**/*.ts",
    "session-manager/**/*",
    "completion-server/**/*"
  ]
}
